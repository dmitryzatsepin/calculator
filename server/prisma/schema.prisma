generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  password  String
  role      Role   @default(USER)
  createdAt DateTime @default(now())
}

model ScreenType {
  id                Int      @id @default(autoincrement())
  name              String   @unique
  material          String[] 
  option            String[]
}

model PixelStep {
  id                Int    @id @default(autoincrement())
  name              String
  type              String
  width             Int
  height            Int
  location          String 
  option            String[]

  @@unique([name, location])
}


model Cabinet {
  id                Int      @id @default(autoincrement())
  name              String
  width             Int
  height            Int
  modulesQ          Int
  powerUnitQ        Int  
  powerUnitCapacity Int
  receiver          Int
  cooler            Int
  pixelStep         String[]
  location          String
  material          String[]
  placement         String

  @@unique([name, location])
}
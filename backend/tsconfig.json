{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "node_modules/@types",
      "prisma/generated/client"
    ],
    "types": ["node"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@my-app/pothos-types": ["./prisma/pothos-types"]
    }

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@prisma/client": ["../node_modules/.prisma/client"]
    },
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}

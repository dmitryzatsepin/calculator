{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./prisma"
    ],
    "typeRoots": [
      "node_modules/@types",
      "prisma/generated/client"
    ],
    "types": ["node"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
    }

  },
  "include": [
    "src/**/*",
    "prisma/pothos-types.ts"
  ],
  "exclude": ["node_modules", "dist"]
}